CREATE TABLE dividendchampions.stockdates(dateofinfo date, yearsonlist int(100));
CREATE TABLE dividendchampions.stockinfo(stickersymbol varchar(30), stockname varchar(60), sector varchar(60), industry varchar(60));

flush PRIVILEGES;
SET password FOR 'root'@'localhost' = 'blueberry';
use mysql
CREATE USER 'user'@'localhost' identified BY 'blueberry';
use dividendchampions;
GRANT ALL PRIVILEGES ON *.* TO 'user'@'localhost';

